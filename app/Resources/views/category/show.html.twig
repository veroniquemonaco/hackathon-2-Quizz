{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/admin.css') }}">
{% endblock %}

{% block body %}
    <div class="container-fluid banniere text-center">
        <div class="row tailleBouton">
            <a href="/app_dev.php/category" class="navAdmin">Catégories</a>
            <a href="/app_dev.php/questioneasy" class="navAdmin">Questions faciles</a>
            <a href="/app_dev.php/questionmedium" class="navAdmin">Questions moyennes</a>
            <a href="/app_dev.php/questionhard" class="navAdmin">Questions difficiles</a>
        </div>
    </div>

    <h1 class="text-center">Category</h1>

    <div class="text-center">

        <a href="{{ path('category_index') }}">Retour à la liste -  </a>

        <a href="{{ path('category_edit', { 'id': category.id }) }}">Editer</a>
    </div>

    <div class="row">
        <table class="col-md-4 col-md-offset-4">
            <tbody>
                <tr>
                    <th>Nom</th>
                    <td>{{ category.name }}</td>
                </tr>
            </tbody>
        </table>
        <div class="col-md-2">
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete" />
            {{ form_end(delete_form) }}
        </div>
    </div>


{% endblock %}
