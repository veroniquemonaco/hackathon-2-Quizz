            {#</div>#}
            {#<button type="submit" class="btn btn-default">Go</button>#}
        {#</form>#}
    </div>
</div>

    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="col-xs-offset-5 logobrand">
                    <img src="{{ asset('images/logoQH.png') }}" width="110px" alt="quizz hackathon">
                    <a class="navbar-brand" href="#">
                    </a>
                </div>
            </div>
            <div class="navbar-header">
            <p class="navbar-text navbar-center">QUESTIONS POUR UN HACKATHON</p>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li><a class="quizz" href="#">Accueil</a></li>
                    <li><a href="#">Jouer</a></li>
                    <li><a href="#">Classements</a></li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>

    {% block body %}{% endblock %}

        {% block javascripts %}
            <script
                    src="https://code.jquery.com/jquery-3.2.1.min.js">
            </script>
            <script src="{{ asset('js/bootstrap.js') }}"></script>
            <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBu-916DdpKAjTmJNIgngS6HL_kDIKU0aU&callback=myMap"></script>
        {% endblock %}
