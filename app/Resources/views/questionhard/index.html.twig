{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/admin.css') }}">
{% endblock %}

{% block body %}
    <h1 class="text-center">Liste des questions Hard</h1>

    <div class="col-md-4 col-md-offset-5">
        <a href="{{ path('questionhard_new') }}">Creer une nouvelle question</a>
    </div>

    <div class="row">
    <table class="col-md-10 col-md-offset-1">
        <thead>
            <tr>
                <th>Title</th>
                <th>Answer1</th>
                <th>Answer2</th>
                <th>Answer3</th>
                <th>Answer4</th>
                <th>Good</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for questionHard in questionHards %}
            <tr>
                <td>{{ questionHard.title }}</td>
                <td>{{ questionHard.answer1 }}</td>
                <td>{{ questionHard.answer2 }}</td>
                <td>{{ questionHard.answer3 }}</td>
                <td>{{ questionHard.answer4 }}</td>
                <td>{{ questionHard.goodanswer }}</td>
                <td>{{ questionHard.category.name }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('questionhard_show', { 'id': questionHard.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('questionhard_edit', { 'id': questionHard.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>

{% endblock %}
