{% extends "base.html.twig" %}

{% block body %}
    {#{{ dump() }}#}

    <div class="container-fluid">
        <div class="row">
            <!-- bloc PersonnalScore -->
            <div class="personnalScore col-lg-3">
                <table class="table">
                    <div class="row">
                        <thead>
                        <tr>
                            <th colspan="4">BEST OF {{ user.username|upper }}</th>
                        </tr>
                        <tr>
                            <td class="tdRank col-lg-3"><strong>Rank</strong></td>
                            <td class="tdScore col-lg-3"><strong>Score</strong></td>
                            <td class="tdScore col-lg-3"><strong>Temps</strong></td>
                        </tr>
                        </thead>
                        <tbody>
                        {% for gameSolo in gamesSolo %}
                            <tr>
                                <td>{{ loop.index }}</td>
                                <td>{{ gameSolo.finalscore }}</td>
                                <td>{{ gameSolo.time }} s</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </div>
                </table>
            </div>
            <!-- bloc Diagram -->
            <div class="col-lg-9 text-center marginResult">
                <div class="row">
                    <h1>Vos Statistiques</h1>
                    <form action="{{ path('player') }}" method="post" class="marginFormLogin">
                        <div class="form-group">
                            <select name="difficultee">
                                <option value="QuestionEasy">Facile</option>
                                <option value="QuestionMedium">Moyen</option>
                                <option value="QuestionHard">Difficle</option>
                            </select>
                        </div>
                        <br>
                        <div class="form-group">
                            <select name="Cate">
                                {% for categorie in categories %}
                                    <option value="{{ categorie.name }}">{{ categorie.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="form-group">
                            <input type="hidden" name="player" value="{{ user.username }}">
                            <input class="btn btn-default bouton" name="choix" value="Go !" type="submit">
                        </div>
                    </form>
                </div>
                <hr/>
                <div class="row">
                    <div class="col-lg-6 text-center">
                        <div class="col-sm-offset-1 col-sm-10 text-center ">
                            <div id="gauge1" class="text-center"
                                 style="margin:0 auto; width: 200px; height: 150px;"></div>
                            {#<p>Pour {{ parties }} jou√©es</p>#}
                        </div>
                    </div>

                    <div class="col-lg-6 text-center ">
                        <div id="gauge2" class="text-center" style="margin:0 auto; width: 200px; height: 150px;"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/raphael-2.1.4.min.js') }}"></script>
    <script src="{{ asset('js/justgage.js') }}"></script>
    <script src="{{ asset('js/script.js') }}"></script>

    <script>
        var g = new JustGage({
            id: "gauge1",
            value: {{ moyenne }},
            min: 0,
            max: 100,
            title: "{{ cat }}",
            label: "{{ diff }}",
            startAnimationTime: 2000,
            startAnimationType: ">",
            refreshAnimationTime: 1000,
            refreshAnimationType: "bounce"
        });

        var g = new JustGage({
            id: "gauge2",
            value: {{ moyennetime }},
            min: 0,
            max: 100,
            title: "Temps Moyen",
            label: "",
            startAnimationTime: 2000,
            startAnimationType: ">",
            refreshAnimationTime: 1000,
            refreshAnimationType: "bounce"
        });
    </script>
{% endblock %}